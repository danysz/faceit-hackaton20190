<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity">

    <TextView
        android:id="@+id/center"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/next"
        android:src="@drawable/next"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/successOne"
        android:layout_width="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/center"
        android:layout_alignParentTop="true"
        android:src="@drawable/v"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/successTwo"
        android:layout_marginTop="10dp"
        android:src="@drawable/x"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/center"
        android:layout_width="60dp"
        android:layout_height="60dp" />


    <ImageView
        android:id="@+id/smileOne"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/successOne"
        android:scaleType="fitXY"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/smileTwo"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/center"
        android:layout_below="@+id/successTwo"
        android:layout_width="120dp"
        android:scaleType="fitXY"
        android:layout_height="120dp" />


    <ImageView
        android:id="@+id/pictureOne"
        android:layout_width="120dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/smileOne"
        android:layout_toRightOf="@+id/center"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/pictureTwo"
        android:layout_width="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/smileOne"
        android:layout_toLeftOf="@+id/center"
        android:layout_height="120dp" />
    
</RelativeLayout>